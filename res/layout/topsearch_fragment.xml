<?xml version="1.0" encoding="utf-8"?>
<!-- Currently address fetch interface consists only of two text field that get
     start address and destination and a button to confirm user input.-->
<LinearLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    android:layout_width    = "match_parent"
    android:layout_height   = "match_parent"
    android:orientation      = "vertical"
    >

    <RelativeLayout
        android:layout_width    = "match_parent"
        android:layout_height   = "wrap_content"
        android:orientation      = "horizontal"
        >
            <AutoCompleteTextView
                android:id = "@+id/dest_addr"
                android:layout_width    = "180dp"
                android:layout_height   = "45dp"
                android:layout_alignParentLeft = "true"
                android:layout_margin   = "10dp"
                android:layout_centerVertical = "true"
                android:hint            = "@string/dest_addr"
                android:background      = "#ECF0F1"
                android:textColor       = "#000000"
            />
            <ImageButton
                android:id = "@+id/addr_ok_bt"
                android:layout_width = "45dp"
                android:layout_height = "45dp"
                android:layout_toRightOf = "@id/dest_addr"
                android:background = "@drawable/ok_button"
                />

            <ImageButton
                android:id = "@+id/connect_button"
                android:layout_width    = "40dp"
                android:layout_height   = "40dp"
                android:layout_alignParentRight = "true"
                android:layout_margin      = "5dp"
           
                android:background      = "@drawable/connect_button"
            />

            <LinearLayout
                android:layout_width = "5dp"
                android:layout_height = "55dp"
                android:layout_alignParentTop = "true"
                android:layout_toLeftOf = "@id/connect_button"
                android:layout_margin = "5dp"
                android:background = "@color/blue"
            ></LinearLayout>
    
    </RelativeLayout>

    <LinearLayout
    android:layout_width = "match_parent"
    android:layout_height = "10dp"
    android:background = "@color/blue"
    ></LinearLayout>
    
</LinearLayout>