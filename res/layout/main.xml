<?xml version="1.0" encoding="utf-8"?>

<!--
	Description: Initial Interface
-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation = "vertical"
	android:layout_width = "match_parent"
	android:layout_height = "match_parent"
>
<!-- This RelayiveLayout is for toptoolbar fragments-->
<RelativeLayout
	android:id = "@+id/toptoolbar"
	android:layout_width = "match_parent"
	android:layout_height = "wrap_content">
</RelativeLayout>

<!-- This RelaytiveLayout is for left itineraries UI-->
<!-- TODO: fix relative posision-->
<RelativeLayout
	android:id = "@+id/click_show_itineraries"
	android:layout_width = "wrap_content"
	android:layout_height = "wrap_content"
	>
</RelativeLayout>

<ImageButton
		android:id							= "@+id/bbutton"
		android:layout_width				= "54dp"
		android:layout_height				= "42dp"
		android:layout_alignParentBottom	= "true"
		android:layout_alignParentLeft		= "true"
		android:layout_marginBottom			= "30dp"
		android:background					= "@drawable/bottom_button"
		android:onClick						= "ShowAllItineraries" />
 </RelativeLayout>

